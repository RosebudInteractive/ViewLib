.grid-b
  font-size 16px !important
  .webix_dd_drag_column, .webix_ss_header, .webix_ss_header TD, .webix_ss_vscroll_header
    font-size 16px !important
    background #ffffff
    color #848995
    font-family OpenSans
  .webix_view
    .webix_tree_open:before
      content "\f0d7"
      display inline-block
      transition all 0.25s ease
    .webix_tree_close:before
      content "\f0d7"
      transform rotate(-90deg)
      display inline-block
      transition all 0.25s ease
//content "\f0da"
//transition content 0.25s ease
.grid-b
  .webix_hcell
    font-size 0.75em !important
    font-family OpenSans
    padding-left 6px
  .webix_cell
    font-family OpenSans
    padding-left 6px
  .webix_first
    .webix_cell
      padding-left 18px
    .webix_hcell
      padding-left 18px
  .webix_last
    .webix_cell, .webix_hcell
      padding-right 24px
.grid-b.standard-size
  .webix_cell
    font-size 0.75em !important
.grid-b.small-size
  .webix_hcell, .webix_cell
    font-size 0.75em !important
.grid-b.large-size
  .webix_cell
    font-size 0.8125em !important

.grid-b
  .webix_ss_header td
    border-color #d8e0ed
  .webix_ss_vscroll_header
    border-color #d8e0ed
  .webix_column > div, .webix_table_cell
    border-color transparent
    border-right 1px solid transparent
  .webix_column>div.webix_row_select
    background-color #9ab3d5
.grid-b&:focus
  .webix_column>div.webix_row_select
    background-color #5195e5
  .webix_column>div.webix_row_select.row-hover
    border-right none !important
    box-shadow inset 0 1px 0 #fff, inset 0 -1px 0 #fff, 0 -1px 0 #5195e5
    -webkit-box-shadow inset 0 1px 0 #fff, inset 0 -1px 0 #fff, 0 -1px 0 #5195e5
    -moz-box-shadow inset 0 1px 0 #fff, inset 0 -1px 0 #fff, 0 -1px 0 #5195e5
  .webix_column.webix_first>div.webix_row_select.row-hover
    box-shadow inset 1px 0 0px #fff, inset 0 1px 0 #fff, inset 0 -1px 0 #fff, 0 -1px 0 #5195e5
    -webkit-box-shadow inset 1px 0 0px #fff, inset 0 1px 0 #fff, inset 0 -1px 0 #fff, 0 -1px 0 #5195e5
    -moz-box-shadow inset 1px 0 0px #fff, inset 0 1px 0 #fff, inset 0 -1px 0 #fff, 0 -1px 0 #5195e5
  .webix_column.webix_last>div.webix_row_select.row-hover
    box-shadow inset -1px 0 0px #fff, inset 0 1px 0 #fff, inset 0 -1px 0 #fff, 0 -1px 0 #5195e5
    -webkit-box-shadow inset -1px 0 0px #fff, inset 0 1px 0 #fff, inset 0 -1px 0 #fff, 0 -1px 0 #5195e5
    -moz-box-shadow inset -1px 0 0px #fff, inset 0 1px 0 #fff, inset 0 -1px 0 #fff, 0 -1px 0 #5195e5

.grid-b.horizontal-lines
  .webix_column > div
    border-bottom-color #d8e0ed
.grid-b.vertical-lines
  .webix_column>div, .webix_table_cell
    border-right-color #d8e0ed
.grid-b.alternate-lines
  .webix_cell:nth-child(2n)
    background-color #f5f7fc
