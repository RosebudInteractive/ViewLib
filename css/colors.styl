.control.button input
    outline none
    &:focus
      outline none

.control.button.is-white
  border-radius 5px
  background-color #ffffff
  border solid 1px #babec5
  box-shadow: 0 1px 2px 0px #dadce0;
  -webkit-box-shadow: 0 1px 2px 0px #dadce0;
  -moz-box-shadow: 0 1px 2px 0px #dadce0;
  input
    background transparent
  &:hover
    background: -moz-linear-gradient(bottom, #f5f6fa, #ffffff);
    background: -webkit-gradient(linear, bottom, top, color-stop(100%, #f5f6fa), color-stop(100%, #ffffff));
    background: -webkit-linear-gradient(bottom, #f5f6fa, #ffffff);
    background: -o-linear-gradient(bottom, #f5f6fa, #ffffff);
    background: -ms-linear-gradient(bottom, #f5f6fa, #ffffff);
    background: linear-gradient(to top, #f5f6fa, #ffffff);
  &:focus
    border-color #5195e5
    box-shadow: 0 1px 6px 0px rgba(80, 40, 230, 0.5)
    -webkit-box-shadow: 0 1px 6px 0px rgba(80, 40, 230, 0.5)
    -moz-box-shadow: 0 1px 6px 0px rgba(80, 40, 230, 0.5)
.control.button.is-white.is-click
  background-color #718ab2
  color #ffffff !important
  border-color #babec5
  box-shadow: inset 0 1px 3px 0px #5c6f8e;
  -webkit-box-shadow: inset 0 1px 2px 0px #5c6f8e;
  -moz-box-shadow: inset 0 1px 2px 0px #5c6f8e;
  &:hover
    background #718ab2
  input
    color #ffffff !important


.control.button.is-green
  border-radius 5px
  background: -moz-linear-gradient(bottom, #2ebb5b, #36c56a);
  background: -webkit-gradient(linear, bottom, top, color-stop(100%, #2ebb5b), color-stop(100%, #36c56a));
  background: -webkit-linear-gradient(bottom, #2ebb5b, #36c56a);
  background: -o-linear-gradient(bottom, #2ebb5b, #36c56a);
  background: -ms-linear-gradient(bottom, #2ebb5b, #36c56a);
  background: linear-gradient(to top, #2ebb5b, #36c56a);
  color #ffffff
  border solid 1px #009c48
  box-shadow: 0 2px 2px 0px #38465a;
  -webkit-box-shadow: 0 2px 2px 0px #38465a;
  -moz-box-shadow: 0 2px 2px 0px #38465a;
  input
    color #ffffff
    background transparent
  &:hover
    background #718ab2
    background: -moz-linear-gradient(bottom, #17b052, #36c56a);
    background: -webkit-gradient(linear, bottom, top, color-stop(100%, #17b052), color-stop(100%, #36c56a));
    background: -webkit-linear-gradient(bottom, #17b052, #36c56a);
    background: -o-linear-gradient(bottom, #17b052, #36c56a);
    background: -ms-linear-gradient(bottom, #17b052, #36c56a);
    background: linear-gradient(to top, #17b052, #36c56a);
  &:focus
    border-color #5195e5
    box-shadow: 0 1px 6px 0px #009c48
    -webkit-box-shadow: 0 1px 6px 0px #009c48
    -moz-box-shadow: 0 1px 6px 0px #009c48
.control.button.is-green.is-click
  background-color #718ab2 !important
  background none
  color #ffffff !important
  border-color #babec5 !important
  box-shadow inset 0 1px 3px 0px #5c6f8e
  -webkit-box-shadow inset 0 1px 2px 0px #5c6f8e
  -moz-box-shadow inset 0 1px 2px 0px #5c6f8e
  &:hover
    background #718ab2
.control.button.is-icon .is-wrapper
  display -webkit-box      /* OLD - iOS 6-, Safari 3.1-6 */
  display -moz-box         /* OLD - Firefox 19- (buggy but mostly works) */
  display -ms-flexbox      /* TWEENER - IE 10 */
  display -webkit-flex     /* NEW - Chrome */
  display flex
  div.is-icon-wrapper
    margin-top 0.25em
    margin-left 0.6875em
  input
    padding-left 0.5em